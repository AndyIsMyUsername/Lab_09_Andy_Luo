<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="mainPane" prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainViewController">
   <children>
      <MenuBar layoutY="1.0" prefHeight="26.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="_File">
            <items>
                  <MenuItem fx:id="newItem" mnemonicParsing="false" onAction="#handleNew" text="New" />
              <MenuItem fx:id="OpenItem" mnemonicParsing="false" onAction="#handleOpen" text="Open..." />
                  <MenuItem fx:id="closeItem" mnemonicParsing="false" onAction="#handleClose" text="Close" />
                  <MenuItem fx:id="saveItem" mnemonicParsing="false" text="Save As ..." />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="_Edit">
            <items>
                  <CheckMenuItem fx:id="gridItem" mnemonicParsing="false" onAction="#handleGrid" text="Use Gridlines" />
                  <MenuItem fx:id="copyItem" mnemonicParsing="false" onAction="#handleCopy" text="Copy" />
                  <Menu fx:id="searchMenu" mnemonicParsing="false" text="Search">
                    <items>
                      <MenuItem fx:id="findItem" mnemonicParsing="false" onAction="#handleFind" text="Find" />
                        <MenuItem fx:id="replaceItem" mnemonicParsing="false" onAction="#handleReplace" text="Replace" />
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="_Settings">
               <items>
                  <RadioMenuItem fx:id="smallItem" mnemonicParsing="false" onAction="#handleSizeSmall" text="small" />
                  <RadioMenuItem fx:id="mediumItem" mnemonicParsing="false" onAction="#handleSizeMedium" text="medium" />
                  <RadioMenuItem fx:id="largeItem" mnemonicParsing="false" onAction="#handleSizeLarge" text="large" />
               </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</Pane>
